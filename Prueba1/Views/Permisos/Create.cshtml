@model Prueba1.Models.Permisos

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" method="post">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card card-outline card-success">
                <div class="card-header">
                    <h3 class="card-title">Crear Permisos</h3>
                    <!-- /.card-tools -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsuarioId" class="control-label"></label>
                        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ReglaId" class="control-label"></label>
                        <select asp-for="ReglaId" class="form-control" asp-items="ViewBag.ReglaId"></select>
                    </div>
                </div>
                <div class="card-footer text-right">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}